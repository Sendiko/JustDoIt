<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JusDoIt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_dye</item>
        <item name="colorPrimaryVariant">@color/indigo_dye</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ming</item>
        <item name="colorSecondaryVariant">@color/ming</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/indigo_dye</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/indigo_dye</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.JusDoIt">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/indigo_dye</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.JusDoIt">
        <item name="android:statusBarColor">@color/indigo_dye</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/indigo_dye</item>
    </style>

    <style name="SettingActivityTheme" parent="Theme.JusDoIt">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

</resources>